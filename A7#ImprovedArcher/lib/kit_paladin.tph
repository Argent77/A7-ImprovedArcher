  abdcdsrq  = ~17 0 0 0 0 17~
  abdcscrq  = ~15 0 0 0 0 15~
  alignmnt  = ~1 0 0 0 0 0 0 0 0~
  dualclas  = ~0 0 0 0 0 0~
